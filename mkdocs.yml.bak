site_name: CMIP-LD Documentation
site_url: https://wcrp-cmip.github.io/CMIP-LD/
repo_url: https://github.com/WCRP-CMIP/CMIP-LD

docs_dir: docs
site_dir: site

theme:
  name: material
  features:
    - navigation.footer
    - search.suggest
    - header.autohide
  palette: 
    # Palette toggle for light mode
    - scheme: default
      primary: blue
      accent: blue
      toggle:
        icon: material/toggle-switch
        name: Switch to dark mode
    # Palette toggle for dark mode
    - scheme: slate
      primary: blue
      accent: blue
      toggle:
        icon: material/toggle-switch-off-outline
        name: Switch to light mode

plugins:
  - search
  - gen-files:
      scripts:
        - scripts/process_src_data_fixed.py
  - literate-nav:
      nav_file: SUMMARY.md
      implicit_index: true
      tab_length: 2

hooks:
  - hooks/nav_post_gen.py  # If you have this hook

markdown_extensions:
  - admonition
  - pymdownx.details
  - attr_list
  - md_in_html
  - pymdownx.superfences:
      custom_fences:
        - name: mermaid
          class: mermaid
          format: !!python/name:pymdownx.superfences.fence_code_format
