site_name: {{ project_name }}
site_url: {{ site_url }}
repo_url: {{ repo_url }}

docs_dir: ../../docs
site_dir: site

theme:
  name: material
  logo: assets/CMIP_Icon_CMYK_negative.svg
  custom_dir: overrides
  features:
    - navigation.footer
    - search.suggest
    - header.autohide
    - navigation.instant
    - navigation.tracking
    - navigation.instant.progress

  copyright: CCBY04 2023+ Daniel Ellis for the CMIP-IPO
  palette: 
    # Palette toggle for light mode
    - scheme: default
      primary: {{ header_color }}
      accent: {{ header_color }}
      toggle:
        icon: material/toggle-switch
        name: Switch to dark mode
    # Palette toggle for dark mode
    - scheme: slate
      primary: {{ header_color }}
      accent: {{ header_color }}
      toggle:
        icon: material/toggle-switch-off-outline
        name: Switch to light mode

plugins:
  - search
  - gen-files:
      scripts:
        - scripts/process_src_data_robust.py  # Robust path checking version
        - scripts/process_json_summaries.py  # Process JSON files for data summaries
{% if generate_repo_stats %}
        - scripts/generate_repo_stats.py  # Generate simple repository statistics
{% endif %}
  - literate-nav:
      nav_file: SUMMARY.md
      implicit_index: true
      tab_length: 2

hooks:
  - hooks/nav_post_gen_v2.py  # Updated to detect virtual files

extra:
  version:
    provider: mike
    
extra_css: 
  - stylesheets/extra.css

extra_javascript:
  - scripts/embed.js

markdown_extensions:
  - admonition
  - pymdownx.details
  - attr_list
  - md_in_html
  - pymdownx.superfences:
      custom_fences:
        - name: mermaid
          class: mermaid
          format: !!python/name:pymdownx.superfences.fence_code_format

# Navigation will be auto-generated or use mipcvs-wiki defaults
# Generated pages from JSON will be added to docs/generated/
