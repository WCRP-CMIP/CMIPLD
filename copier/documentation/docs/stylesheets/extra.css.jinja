/* {{ project_name }} - CMIP Style Theme */

@import url('https://fonts.googleapis.com/css2?family=Akshar:wght@400;500;600&display=swap');

/* ============================================
   LAYOUT - FULL WIDTH
   ============================================ */

.md-grid {
  max-width: 100%;
}

.md-main__inner {
  max-width: none;
}

.md-sidebar--primary {
  width: 12.1rem;
}

.md-sidebar--secondary {
  width: 12.1rem;
}

.md-content {
  max-width: 61rem;
  margin-left: auto;
  margin-right: auto;
}

/* ============================================
   TYPOGRAPHY
   ============================================ */

.md-typeset h1,
.md-typeset h2,
.md-typeset h3,
.md-typeset h4,
.md-typeset h5,
.md-typeset h6 {
  font-family: "Akshar", sans-serif;
  font-weight: 600;
}

.md-header__title {
  font-family: "Akshar", sans-serif;
  font-weight: 500;
  font-size: 0.9rem;
}

/* ============================================
   HEADER
   ============================================ */

.md-header {
  background-color: var(--md-primary-fg-color);
}

.md-header__button.md-logo img,
.md-header__button.md-logo svg {
  height: 1.5rem;
}

/* Search styling */
.md-search__form {
  background-color: rgba(0, 0, 0, 0.1);
  border-radius: 0.2rem;
}

[data-md-color-scheme="slate"] .md-search__form {
  background-color: rgba(255, 255, 255, 0.1);
}

/* ============================================
   NAVIGATION PATH (BREADCRUMBS)
   ============================================ */

.md-path {
  margin-bottom: 0;
}

.md-path__inner {
  padding: 0.4rem 0;
  font-size: 0.7rem;
}

/* ============================================
   LEFT NAVIGATION
   ============================================ */

.md-nav {
  font-size: 0.75rem;
  line-height: 1.4;
}

.md-nav__title {
  font-family: "Akshar", sans-serif;
  font-size: 0.75rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  padding: 0.6rem 0.6rem 0.4rem;
  color: var(--md-default-fg-color);
}

.md-nav__item {
  padding: 0;
}

.md-nav__link {
  padding: 0.4rem 0.6rem;
  margin: 0;
  border-radius: 0;
  font-size: 0.75rem;
  color: var(--md-default-fg-color--light);
}

.md-nav__link:hover,
.md-nav__link:focus {
  color: var(--md-primary-fg-color);
}

.md-nav__link--active,
.md-nav__item--active > .md-nav__link {
  color: var(--md-primary-fg-color);
  font-weight: 500;
}

/* Nested navigation */
.md-nav--secondary .md-nav__link,
.md-nav__item--nested .md-nav .md-nav__link {
  padding-left: 1.2rem;
}

.md-nav__item--nested .md-nav .md-nav .md-nav__link {
  padding-left: 1.8rem;
}

/* External link indicator */
.md-nav__link[href^="http"]::after {
  content: " â†—";
  font-size: 0.6em;
  opacity: 0.5;
}

/* ============================================
   TABLE OF CONTENTS (RIGHT SIDEBAR)
   ============================================ */

.md-sidebar--secondary .md-nav__title {
  font-size: 0.7rem;
}

.md-sidebar--secondary .md-nav__link {
  font-size: 0.7rem;
  padding: 0.3rem 0.6rem;
}

/* ============================================
   CONTENT
   ============================================ */

.md-typeset {
  font-size: 0.8rem;
  line-height: 1.6;
}

.md-typeset h1 {
  font-size: 1.6rem;
  margin-bottom: 0.8rem;
}

.md-typeset h2 {
  font-size: 1.2rem;
  margin-top: 1.5rem;
}

.md-typeset h3 {
  font-size: 1rem;
}

.md-typeset code {
  font-size: 0.75rem;
  padding: 0.1em 0.3em;
  border-radius: 0.2rem;
}

.md-typeset pre {
  font-size: 0.75rem;
  border-radius: 0.2rem;
}

.md-typeset table:not([class]) {
  font-size: 0.75rem;
}

.md-typeset table:not([class]) th {
  background: var(--md-primary-fg-color);
  color: white;
  font-family: "Akshar", sans-serif;
  font-weight: 500;
  font-size: 0.7rem;
  text-transform: uppercase;
  letter-spacing: 0.03em;
  padding: 0.6rem 0.8rem;
}

.md-typeset table:not([class]) td {
  padding: 0.5rem 0.8rem;
}

/* Admonitions */
.md-typeset .admonition,
.md-typeset details {
  font-size: 0.75rem;
  border-radius: 0.2rem;
}

.md-typeset .admonition-title,
.md-typeset details > summary {
  font-family: "Akshar", sans-serif;
  font-size: 0.75rem;
  font-weight: 500;
}

/* ============================================
   FOOTER - MINIMAL
   ============================================ */

.md-footer {
  background: transparent;
  border-top: 1px solid var(--md-default-fg-color--lightest);
}

.md-footer__inner {
  padding: 0.6rem 0.8rem;
}

.md-footer__link {
  font-size: 0.7rem;
  color: var(--md-default-fg-color--light);
}

.md-footer__link:hover {
  color: var(--md-primary-fg-color);
}

.md-footer-meta {
  display: none;
}

.md-copyright {
  display: block;
  text-align: center;
  font-size: 0.6rem;
  color: var(--md-default-fg-color--lighter);
  padding: 0.4rem;
}

/* Hide social */
.md-social {
  display: none;
}

/* ============================================
   DARK MODE
   ============================================ */

[data-md-color-scheme="slate"] {
  --md-code-bg-color: #1e1e2e;
}

[data-md-color-scheme="slate"] .md-footer {
  border-top-color: rgba(255, 255, 255, 0.1);
}

/* ============================================
   RESPONSIVE
   ============================================ */

@media screen and (min-width: 76.25em) {
  .md-sidebar--primary {
    width: 12.1rem;
  }
  .md-sidebar--secondary {
    width: 12.1rem;
  }
}

@media screen and (max-width: 76.25em) {
  .md-content {
    max-width: none;
  }
}

@media print {
  .md-header,
  .md-footer,
  .md-sidebar {
    display: none !important;
  }
}
