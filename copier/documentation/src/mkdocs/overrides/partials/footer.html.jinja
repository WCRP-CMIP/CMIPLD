{% raw %}
<footer class="md-footer">
  {% if page.previous_page or page.next_page %}
  <nav class="md-footer__inner md-grid" aria-label="Footer">
    {% if page.previous_page %}
    <a href="{{ page.previous_page.url | url }}" class="md-footer__link md-footer__link--prev" rel="prev">
      <span class="md-footer__direction">Previous</span>
      <span class="md-ellipsis">{{ page.previous_page.title }}</span>
    </a>
    {% endif %}
    {% if page.next_page %}
    <a href="{{ page.next_page.url | url }}" class="md-footer__link md-footer__link--next" rel="next" style="margin-left: auto;">
      <span class="md-footer__direction">Next</span>
      <span class="md-ellipsis">{{ page.next_page.title }}</span>
    </a>
    {% endif %}
  </nav>
  {% endif %}
  <div class="md-copyright">Â© {% endraw %}{{ author_name }}{% raw %}</div>
</footer>
{% endraw %}
