site_name: {{ project_name }}
# site_url: Uses ENV variable for flexibility - empty locally, full URL in production
# This allows mike versioning to work in CI while keeping relative paths for local dev
site_url: !ENV [SITE_URL, '{{ site_url }}']
repo_url: {{ repo_url }}
repo_name: {{ repo_owner }}/{{ repo_name }}
site_description: {{ description }}
site_author: {{ author_name }}

docs_dir: ../../docs
site_dir: site

# Theme configuration
theme:
  name: shadcn
  custom_dir: overrides
  palette:
    primary: {{ header_color }}
    accent: {{ header_color }}
  show_stargazers: false
  favicon: assets/favicon.svg
{% if use_cmip_logo %}
  icon: assets/cmip-logo.svg
{% else %}
  icon: assets/logo.svg
{% endif %}

# Plugins
plugins:
  - search:
      lang: en
      separator: '[\s\-\.]+'
{% if enable_scripts %}
  - gen-files:
      scripts:
        - hooks/run_scripts.py
{% endif %}
  - literate-nav:
      nav_file: SUMMARY.md
      implicit_index: true
      tab_length: 2

# Hooks
hooks:
  - hooks/generate_nav.py
  - hooks/post_build.py

extra:
  generator: false
  version:
    provider: mike

extra_css:
  - stylesheets/custom.css

extra_javascript:
  - stylesheets/custom.js
  - stylesheets/embed.js
  - https://unpkg.com/mermaid@10/dist/mermaid.min.js

markdown_extensions:
  - admonition
  - attr_list
  - def_list
  - footnotes
  - md_in_html
  - tables
  - toc:
      permalink: true
      toc_depth: 3
  - pymdownx.details
  - pymdownx.highlight:
      anchor_linenums: true
  - pymdownx.inlinehilite
  - pymdownx.superfences:
      custom_fences:
        - name: mermaid
          class: mermaid
          format: !!python/name:pymdownx.superfences.fence_code_format
  - pymdownx.tabbed:
      alternate_style: true
  - pymdownx.tasklist:
      custom_checkbox: true
