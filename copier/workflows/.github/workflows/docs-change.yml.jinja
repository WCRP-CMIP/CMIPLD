name: âŒ® docs-change
description: Build and deploy documentation when docs branch changes

permissions:
  contents: write
  pages: write
  id-token: write

on:
  push:
    branches:
      - "docs"
    paths:
      - "docs/**"
{% if has_mkdocs or build_mkdocs_on_sync %}
      - "mkdocs.yml"
      - "{{ mkdocs_dir if has_mkdocs else 'src/mkdocs' }}/**"
{% endif %}
  workflow_dispatch:

jobs:
  build_and_deploy:
    runs-on: ubuntu-latest
    outputs:
      has_changes: {% raw %}${{ steps.check_changes.outputs.has_changes }}{% endraw %}
    
    steps:
      - name: Checkout repository with all branches
        uses: actions/checkout@v4
        with:
          ref: docs
          fetch-depth: 0
          
      - name: Fetch required branches
        run: |
          git fetch origin {{ pages_branch }}:{{ pages_branch }}
          git fetch origin docs:docs

      - name: Configure Git
        run: |
          git config user.name "cmip-ipo"
          git config user.email "actions@wcrp-cmip.org"

      - name: Checkout production branch
        run: |
          git checkout {{ pages_branch }}
{% if build_mkdocs_on_sync %}

      - name: Setup Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.11'

      - name: Copy all content from docs branch
        run: |
          echo "Copying all docs branch content to production..."
          git restore --source origin/docs --staged --worktree -- . || true
          echo "âœ“ Docs branch copied"

      - name: Build MkDocs site
        continue-on-error: true
        run: |
          if [ -f "{{ mkdocs_config_path }}" ]; then
            echo "Building MkDocs site..."
            
            # Install dependencies
            if [ -f "{{ mkdocs_requirements_path }}" ]; then
              echo "Installing from {{ mkdocs_requirements_path }}..."
              pip install -r "{{ mkdocs_requirements_path }}"
            else
              echo "Installing default MkDocs packages..."
              pip install mkdocs mkdocs-material
            fi
            
            # Build to 'build' folder
            rm -rf build
            mkdocs build -f "{{ mkdocs_config_path }}" -d ../../build
            
            # Clean up: remove src and docs
            rm -rf src docs
            
            # Move build to docs
            mv build docs
            
            echo "âœ“ Built MkDocs site - docs/ folder now contains built site only"
          else
            echo "No {{ mkdocs_config_path }} found, skipping MkDocs build"
          fi
{% elif has_mkdocs %}

      - name: Setup Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.11'

      - name: Install MkDocs dependencies
        run: |
          python -m pip install --upgrade pip
          
          if [ -f "{{ mkdocs_dir }}/requirements.txt" ]; then
            pip install -r "{{ mkdocs_dir }}/requirements.txt"
          else
            pip install mkdocs mkdocs-material
          fi

      - name: Build documentation
        run: |
          cd {{ mkdocs_dir }}
          mkdocs build --clean
          
          git checkout {{ pages_branch }}
          rm -rf docs/site
          mkdir -p docs
          cp -r site docs/
{% else %}

      - name: Copy docs from docs branch
        run: |
          echo "Restoring docs folder..."
          rm -rf docs
          git restore --source origin/docs --staged --worktree -- docs/ || true
          
          echo "âœ“ Copied docs from docs branch"
{% endif %}

      - name: Check for changes
        id: check_changes
        run: |
          git add -A
          
          if git diff --cached --quiet; then
            echo "has_changes=false" >> $GITHUB_OUTPUT
            echo "No documentation changes"
          else
            echo "has_changes=true" >> $GITHUB_OUTPUT
            echo "Documentation changes detected"
          fi

      - name: Commit changes
        if: steps.check_changes.outputs.has_changes == 'true'
        run: |
          git commit -m "Update documentation from docs branch"
          git push origin {{ pages_branch }}
{% if enable_github_pages %}

  deploy:
    needs: build_and_deploy
    if: needs.build_and_deploy.outputs.has_changes == 'true'
    runs-on: ubuntu-latest
    permissions:
      contents: read
      pages: write
      id-token: write
    steps:
      - uses: actions/checkout@v4
        with:
          ref: {{ pages_branch }}
      - uses: actions/configure-pages@v5
      - uses: actions/upload-pages-artifact@v3
        with:
          path: '.'
      - uses: actions/deploy-pages@v4
        id: deployment
      - name: Display URL
        run: |
          echo "## ðŸ“š Documentation Deployed" >> $GITHUB_STEP_SUMMARY
          echo "URL: {% raw %}${{ steps.deployment.outputs.page_url }}{% endraw %}" >> $GITHUB_STEP_SUMMARY
{% endif %}
